{
    "builds": [
      {
        "src": "ecommerce/wsgi.py",
        "use": "@vercel/python",
        "config": {
          "maxLambdaSize": "15mb",
          "runtime": "python3.12.2"
        }
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "dest": "/static/$1"
      },
      {
        "src": "/media/(.*)",
        "dest": "/media/$1"
      },
      {
        "src": "/(.*)",
        "dest": "ecommerce/wsgi.py"
      }
    ],
    "build": {
      "env": {
        "PYTHON_VERSION": "3.12.2"  
      },
      "commands": [
        "pip install -r requirements.txt",
        "python manage.py collectstatic --noinput"
      ]
    }
  }